<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header Section -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:background="@drawable/top_background_dashboard">

                <!-- Greeting Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="30dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/tvGreeting"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@android:color/white"
                            android:textSize="18sp"
                            android:fontFamily="@font/inter_bold" />

                        <TextView
                            android:id="@+id/tv_welcome"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="Selamat datang di WeatherWave"
                            android:textColor="@android:color/white"
                            android:textSize="14sp"
                            android:fontFamily="@font/inter_regular" />
                    </LinearLayout>

                    <!-- Notification Icon -->
                    <ImageView
                        android:id="@+id/iv_notification"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/bg_circle"
                        android:src="@drawable/notifications_24"
                        android:padding="8dp" />
                </LinearLayout>

                <!-- Lokasi -->
                <RelativeLayout
                    android:id="@+id/location_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="100dp"
                    android:layout_marginEnd="24dp"
                    android:background="@drawable/bg_location"
                    android:padding="12dp">

                    <ImageView
                        android:id="@+id/location_icon"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/location_24"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true" />

                    <TextView
                        android:id="@+id/location_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="9dp"
                        android:layout_toEndOf="@id/location_icon"
                        android:fontFamily="@font/inter_medium"
                        android:text="Paccerakkang, Kota Makassar"
                        android:textColor="@color/blue_deep"
                        android:textSize="14sp" />
                </RelativeLayout>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/llWeatherSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/weather_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/inter_semibold"
                    android:text="Cuaca hari ini"
                    android:textColor="#143652"
                    android:textSize="18sp" />
            </LinearLayout>

            <!-- Weather Display -->
            <LinearLayout
                android:id="@+id/weather_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="13dp"
                android:orientation="vertical"
                android:background="@drawable/weather_card"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Date -->
                    <TextView
                        android:id="@+id/weather_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sen, 2 Des 2024"
                        android:textSize="16sp"
                        android:textColor="@color/blue_deep"
                        android:fontFamily="@font/inter_semibold" />
                </LinearLayout>

                <!-- Weather Details -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Left Section -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <!-- Weather Condition -->
                        <TextView
                            android:id="@+id/weather_condition"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Berawan"
                            android:textSize="14sp"
                            android:textColor="@color/blue_deep"
                            android:fontFamily="@font/inter_medium" />

                        <!-- Temperature -->
                        <TextView
                            android:id="@+id/tvTemperature"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="28Â°"
                            android:textSize="36sp"
                            android:textColor="@color/blue_deep"
                            android:fontFamily="@font/inter_bold" />

                    </LinearLayout>

                    <!-- Right Section -->
                    <ImageView
                        android:id="@+id/weather_icon"
                        android:layout_width="90dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/partly_cloudy" />
                </LinearLayout>

                <!-- Additional Info -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <!-- Wind Speed -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/weather_wind_icon"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/wind" />

                        <TextView
                            android:id="@+id/tvWindSpeed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:text="5 km/h"
                            android:textSize="14sp"
                            android:textColor="@color/blue_deep"
                            android:fontFamily="@font/inter_regular" />
                    </LinearLayout>

                    <!-- Humidity -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/weather_humidity_icon"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/droplet" />

                        <TextView
                            android:id="@+id/tvHumidity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:text="68%"
                            android:textSize="14sp"
                            android:textColor="@color/blue_deep"
                            android:fontFamily="@font/inter_regular" />
                    </LinearLayout>

                    <!-- Precipitation -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/weather_precipitation_icon"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/precipitation" />

                        <TextView
                            android:id="@+id/tvPrecipitation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:text="28mm"
                            android:textSize="14sp"
                            android:textColor="@color/blue_deep"
                            android:fontFamily="@font/inter_regular" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/alert_layout"
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:orientation="horizontal"
                android:padding="20dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/iv_safe_icon"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center_vertical" />

                <TextView
                    android:id="@+id/tv_safe_condition"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="11dp"
                    android:textColor="@color/blue_deep"
                    android:textSize="12sp"
                    android:fontFamily="@font/inter_medium" />
            </LinearLayout>

            <!-- News Section -->
            <LinearLayout
                android:id="@+id/llNewsSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvTitleNews"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/inter_semibold"
                    android:text="Berita terkini"
                    android:textColor="#143652"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tvSeeAllNews"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_medium"
                    android:text="Selengkapnya"
                    android:textColor="#2F9BC9"
                    android:textSize="14sp" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvNews"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="20dp"
                android:clipToPadding="false"
                android:paddingStart="18dp"
                android:paddingEnd="18dp"
                android:scrollbars="none"
                android:orientation="horizontal" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
