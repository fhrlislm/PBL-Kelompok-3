<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:padding="8dp">

    <!-- Gambar artikel -->
    <androidx.cardview.widget.CardView
        android:layout_width="130dp"
        android:layout_height="90dp"
        android:layout_marginEnd="16dp"
        app:cardCornerRadius="10dp"
        android:clipChildren="true"
        android:clipToPadding="true">

    <ImageView
        android:id="@+id/image_artikel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/nelayan" />
    </androidx.cardview.widget.CardView>

    <!-- Teks untuk judul dan sumber artikel -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <!-- Judul artikel -->
        <TextView
            android:id="@+id/tvKategori"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Berita"
            android:textColor="@color/gray_deep"
            android:textSize="14sp"
            android:fontFamily="@font/inter_regular"
            android:layout_marginBottom="2dp" />
        <TextView
            android:id="@+id/tvJudul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nelayan Tak Melaut, Harga Ikan Terpantau Mahal"
            android:textColor="@color/blue_deep"
            android:textSize="16sp"
            android:fontFamily="@font/inter_medium"
            android:ellipsize="end"
            android:maxLines="2"
            android:lineSpacingExtra="3dp"
            android:layout_marginBottom="6dp" />

        <!-- Sumber berita -->
        <TextView
            android:id="@+id/tvSumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kompas News"
            android:textColor="@color/gray_deep"
            android:textSize="14sp"
            android:fontFamily="@font/inter_regular" />
    </LinearLayout>
</LinearLayout>
